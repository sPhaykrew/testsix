<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB300"
        app:titleTextAppearance="@style/Toolbar.TitleText_setting"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_marginTop="55sp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="15sp"
            android:textSize="22sp"
            android:text="เปลี่ยนขนาดฟอนต์"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="83sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="45sp">

            <RadioButton
                android:id="@+id/Font1"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขนาดเล็ก" />

            <RadioButton
                android:id="@+id/Font2"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขนาดกลาง" />

            <RadioButton
                android:id="@+id/Font3"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขนาดโหญ่" />
        </RadioGroup>

        <TextView
            android:id="@+id/preText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="102sp"
            android:text="กขฃคฅฆงจ" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="220sp">

        <TextView
            android:id="@+id/textBG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="15sp"
            android:textSize="22sp"
            android:text="เปลี่ยนธีมของแอปพลิเคชัน"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="83sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:layout_marginStart="16sp">

            <RadioButton
                android:id="@+id/BG1"
                android:text="ธีม 1"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"/>

            <RadioButton
                android:id="@+id/BG2"
                android:text="ธีม 2"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"/>

            <RadioButton
                android:id="@+id/BG3"
                android:text="ธีม 3"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"/>

            <RadioButton
                android:id="@+id/BG4"
                android:text="ธีม 4"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"/>

        </RadioGroup>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="60sp"
            android:padding="60sp">

        <ImageView
            android:id="@+id/themeBgImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pre1" />
        </FrameLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/backMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22sp"
        android:layout_marginTop="12sp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

</RelativeLayout>