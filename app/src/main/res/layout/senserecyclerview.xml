<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360sp"
    android:layout_height="200sp"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:layout_marginBottom="1sp"
    android:padding="16sp"
    android:background="#FFD54F"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/headerWord"
        android:padding="6sp"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="#FFD54F"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/senseTh"
        android:padding="8sp"
        android:textSize="18sp"
        android:background="#FFD54F"
        android:layout_marginTop="42sp"
        android:layout_marginStart="30sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/senseEng"
        android:padding="8sp"
        android:textSize="18sp"
        android:background="#FFD54F"
        android:layout_marginTop="100sp"
        android:layout_marginStart="30sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49sp"
        app:srcCompat="@drawable/ic_volume_up_black_24dp"
        aandroid:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105sp"
        app:srcCompat="@drawable/ic_volume_up_black_24dp"
        aandroid:ignore="VectorDrawableCompat" />


</RelativeLayout>
